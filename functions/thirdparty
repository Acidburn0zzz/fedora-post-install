#!/bin/bash

dir="$(dirname "$0")"

source $dir/functions/apps/chrome
source $dir/functions/apps/dropbox
source $dir/functions/apps/oracle-java
source $dir/functions/apps/rvm
source $dir/functions/apps/slack
source $dir/functions/apps/spotify
source $dir/functions/apps/sublime-text
source $dir/functions/apps/vlc

# Install Third-Party Applications
function thirdparty {
	echo_message title "Starting 'thirdparty' function"
	eval `resize`
	THIRDPARTY=$(whiptail \
		--notags \
		--title "Third-Party Installation" \
		--menu "\nWhat third-party software would you like to install?" \
		--ok-button "Install" \
		--cancel-button "Go Back" \
		$LINES $COLUMNS $(( $LINES - 12 )) \
		'chrome'		'Google Chrome' \
		'dropbox'		'Dropbox' \
		'oracle-java'	'Oracle Java' \
		'rvm'			'Ruby Version Manager (RVM)' \
		'slack'			'Slack' \
		'spotify'		'Spotify' \
		'sublime_text'	'Sublime Text 3' \
		'vlc'			'VLC Media Player' \
		3>&1 1>&2 2>&3)

	exitstatus=$?
	if [ $exitstatus = 0 ]; then
		echo_message title "Starting '$THIRDPARTY' function..."
		$THIRDPARTY
	else
		main
	fi
}

