#!/bin/bash

# Install VLC
function install_vlc {
	# Variables
	PACKAGE=vlc
	NAME="VLC Media Player"
	echo_message title "Starting $NAME installation..."
	# Check if package is installed
	if [ $(check_packages $PACKAGE; echo $?) = 1 ]; then
		echo_message info "$NAME is not installed."
		# Add RPM Fusion
		REPOVERSION="free"
		if (eval `resize` && whiptail \
			--title "Add RPM Fusion ($REPOVERSION) Repository?" \
			--yesno "The RPM Fusion ($REPOVERSION) repository is required to install $NAME.\n\nProceed with installation?" \
			10 60) then
			# Add repository
			echo_message info 'Adding repository...'
			add_rpmfusion $REPOVERSION
		else
			install_thirdparty
		fi
		# Admin privileges
		elevate_privilege "dnf install -y $PACKAGE"
		# Done
		echo_message success "Installation of '$PACKAGE' complete."
		whiptail --title "Finished" --msgbox "Installation of $NAME is complete." 8 56
		install_thirdparty
	else
		# Already installed
		echo_message success "$NAME already installed."
		whiptail --title "Finished" --msgbox "$NAME is already installed." 8 56
		install_thirdparty
	fi
}